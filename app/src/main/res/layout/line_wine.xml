<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/button_shape"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_wine_list_wine_photo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>


        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_wine_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_wine_list_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1950"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/imageView_wine_list_bottle_logo"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="name"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:background="@drawable/logo_bouteille"/>

            <TextView
                android:id="@+id/textView_wine_list_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:gravity="center"
                android:textSize="20dp" />

        </LinearLayout>





    </LinearLayout>

</android.support.constraint.ConstraintLayout>