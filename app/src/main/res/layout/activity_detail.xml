<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_wine_image_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/down_bar"/>

        <TextView
            android:id="@+id/detail_wine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:gravity="center"
            android:textSize="25dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_wine_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date wine 1980"
            android:gravity="left"
            android:textSize="20dp"
            android:layout_marginRight="120dp"
            />

        <TextView
            android:id="@+id/detail_wine_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quantity"
            android:layout_gravity="right"
            android:textSize="20dp"
            />

    </LinearLayout>

        <TextView
            android:id="@+id/detail_wine_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="category"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/detail_wine_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="country"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/detail_wine_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="region"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/detail_wine_consumption_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="consumption_date"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/detail_wine_added_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="added_date"
            android:textSize="15dp"
            android:layout_marginBottom="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/down_bar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/detail_activity_delete_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginTop="25dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/button_shape"
                android:text="Withdraw from Cellar"
                android:textSize="14dp" />

            <Button
                android:id="@+id/detail_activity_back_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Back"
                android:textSize="14dp"
                android:background="@drawable/button_shape"
                android:layout_gravity="right"/>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>