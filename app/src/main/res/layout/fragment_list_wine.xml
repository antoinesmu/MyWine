<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.list_wine.ListWineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/editText_fragment_list_wine_search"

            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:hint="Search"
            android:background="@drawable/button_shape"/>

        <ImageButton
            android:id="@+id/list_wine_search_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/search_button_shape"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

        <TextView
            android:id="@+id/textview_fragment_list_wine_hello_user"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_list_wines"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>